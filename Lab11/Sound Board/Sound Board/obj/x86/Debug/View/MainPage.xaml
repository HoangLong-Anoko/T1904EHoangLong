<Page x:ConnectionId='1'
    x:Class="Sound_Board.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sound_Board.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Sound_Board.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='13' x:Name="HamburgerButton"
                    RelativePanel.AlignLeftWithPanel="True"
                                                 
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;"
                    FontSize="20"
                    Height="45"
                    Width="45">
            </Button>
            <Button x:ConnectionId='14' x:Name="BackButton"
                    RelativePanel.RightOf="HamburgerButton"
                                            
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE0A6;" Width="45" Height="45">
            </Button>
            <AutoSuggestBox x:ConnectionId='15' x:Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for sound here"
                            Width="200"
                            Margin="0,5,10,0"
                            QueryIcon="Find"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True">
            </AutoSuggestBox>
        </RelativePanel>
        <SplitView x:ConnectionId='2' x:Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="45"
                   OpenPaneLength="200"
                   Grid.Row="1">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' x:Name="MenuItemsListView"
                          IsItemClickEnabled="True"
                                                          
                                                                 >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                <Image x:ConnectionId='6'                            
                                       Height="35" Width="35" 
                                       Margin="-10,10,0,10">
                                </Image>
                                <TextBlock x:ConnectionId='7'                          
                                           FontSize="18" 
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center">
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <MediaElement x:ConnectionId='8' x:Name="MyMediaElement" AutoPlay="True"></MediaElement>
                    <TextBlock x:ConnectionId='9' x:Name="CategoryTextBlock" Text="AllSound" FontSize="24"></TextBlock>
                    <GridView x:ConnectionId='10' Grid.Row="1"
                              x:Name="SoundGridView"
                              SelectionMode="None"
                                                           
                              IsItemClickEnabled="True"
                                                                 
                              AllowDrop="True"
                                                       
                                                               >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='12' x:Name="MyImage" Width="112" Height="101"                            ></Image>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

